@attribute [Authorize]

<MudStack Row="true" Spacing="4">
    <AuthorizeView>
        <Authorized>
            <MudButton Href="/profile" Variant="Variant.Filled" Color="Color.Info">
                Profile
            </MudButton>
            <MudButton Href="/logout" Variant="Variant.Filled" Color="Color.Secondary">
                Log out
            </MudButton>
        </Authorized>
        <NotAuthorized>
            <MudButton Href="/login" Variant="Variant.Filled" Color="Color.Success">
                Sign in
            </MudButton>
            <MudButton Href="/signup" Variant="Variant.Filled" Color="Color.Info">
                Create an account
            </MudButton>
        </NotAuthorized>
    </AuthorizeView>
</MudStack>