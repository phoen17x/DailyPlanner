@page "/"

@layout MainLayout

@inject NavigationManager NavigationManager

<AuthorizeView>
    <Authorized>
        @{ NavigationManager.NavigateTo("/notebooks"); }
    </Authorized>
    <NotAuthorized>
        <MudContainer Class="d-flex align-center flex-column">
            <MudText Class="my-10" Style="font-size: 100px">Daily Planner</MudText>
            <MudContainer Class="d-flex justify-center">
                <MudButton Href="/login" Variant="Variant.Filled" Color="Color.Success" Class="mr-2">
                    Sign in
                </MudButton>
                <MudButton Href="/signup" Variant="Variant.Filled" Color="Color.Info" Class="ml-2">
                    Create an account
                </MudButton>
            </MudContainer>
        </MudContainer>
    </NotAuthorized>
</AuthorizeView>